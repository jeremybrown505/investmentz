<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  xmlns:app="http://schemas.android.com/apk/res-auto">

  <TextView
    android:id="@+id/last_date_purchased"
    android:text="7/15/2020"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toStartOf="@id/last_amount_purchased"
    app:layout_constraintBottom_toBottomOf="parent"
    />

  <TextView
    android:id="@+id/last_amount_purchased"
    android:text="$10"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toEndOf="@id/last_date_purchased"
    app:layout_constraintEnd_toStartOf="@id/last_buy_price"
    app:layout_constraintBottom_toBottomOf="parent"
    />



  <TextView
    android:id="@+id/last_buy_price"
    android:text="$10,000"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toEndOf="@id/last_amount_purchased"
    app:layout_constraintEnd_toStartOf="@id/last_date_sold"
    app:layout_constraintBottom_toBottomOf="parent"
    />

  <TextView
    android:id="@+id/last_date_sold"
    android:text="7/15/2020"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toEndOf="@id/last_buy_price"
    app:layout_constraintEnd_toStartOf="@id/last_sell_price"
    app:layout_constraintBottom_toBottomOf="parent"
    />

  <TextView
    android:id="@+id/last_sell_price"
    android:text="$11,000"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toEndOf="@id/last_date_sold"
    app:layout_constraintEnd_toStartOf="@id/last_sold_price"
    app:layout_constraintBottom_toBottomOf="parent"

    />

  <TextView
    android:id="@+id/last_sold_price"
    android:text="$11"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toEndOf="@id/last_sell_price"
    app:layout_constraintEnd_toStartOf="@id/last_ROI"
    app:layout_constraintBottom_toBottomOf="parent"
    />

  <TextView
    android:id="@+id/last_ROI"
    android:text="10%"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toEndOf="@id/last_sold_price"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    />


</androidx.constraintlayout.widget.ConstraintLayout>