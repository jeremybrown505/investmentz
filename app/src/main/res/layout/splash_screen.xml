<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:tools="http://schemas.android.com/tools"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:android="http://schemas.android.com/apk/res/android"
  tools:showIn="@layout/activity_main">


  <TextView
    android:id="@+id/welcome_message"
    android:text="Welcome"
    android:textStyle="italic|bold"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toTopOf="@id/bitcoin_price"
    />

  <TextView
    android:id="@+id/bitcoin_price"
    android:text="Bitcoin Price:"
    android:textStyle=""
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/welcome_message"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toTopOf="@id/stock_graph"
    />

  <TextView
    android:id="@+id/stock_graph"
    android:text="Stock price"
    android:layout_width="0dp"
    android:layout_height="0dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/bitcoin_price"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toTopOf="@id/add_funds_button"
    />

  <Button
    android:id="@+id/add_funds_button"
    android:text="Add Funds"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/stock_graph"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toTopOf="@id/buy_amount"
    />

  <Button
    android:id="@+id/buy_amount"
    android:text="(amount to buy)"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/add_funds_button"
    app:layout_constraintEnd_toStartOf="@id/sell_amount"
    app:layout_constraintBottom_toTopOf="@id/buy_button"
    />

  <Button
    android:id="@+id/sell_amount"
    android:text="(amount to sell)"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toEndOf="@id/buy_amount"
    app:layout_constraintTop_toBottomOf="@id/add_funds_button"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toTopOf="@id/sell_button"
    />

  <Button
    android:id="@+id/buy_button"
    android:text="Buy"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/buy_amount"
    app:layout_constraintEnd_toStartOf="@id/sell_button"
    app:layout_constraintBottom_toTopOf="@id/change_balance"
    />

  <Button
    android:id="@+id/sell_button"
    android:text="Sell"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:layout_constraintStart_toEndOf="@id/buy_button"
    app:layout_constraintTop_toBottomOf="@id/sell_amount"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toTopOf="@id/change_balance"
    />

  <!--TODO Create graph layout here-->


  <Button
    android:id="@+id/change_balance"
    android:text="@string/balance_button_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/buy_button"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toTopOf="@id/history"
    />

  <Button
    android:id="@+id/history"
    android:text="Using the total funds available you have $$$ which id % of total available. Click to see a history of the recent trades."
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/change_balance"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    />


</merge>